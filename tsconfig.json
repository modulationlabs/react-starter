{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types", "./types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts?",
    "dist"
  ]
}
